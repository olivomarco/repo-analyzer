{
  // Microsoft-themed color customizations
  "workbench.colorCustomizations": {
    "titleBar.activeBackground": "#0078D4",
    "titleBar.activeForeground": "#FFFFFF",
    "titleBar.inactiveBackground": "#005A9E",
    "titleBar.inactiveForeground": "#CCCCCC",
    "activityBar.background": "#0078D4",
    "activityBar.foreground": "#FFFFFF",
    "activityBar.inactiveForeground": "#FFFFFF99",
    "activityBarBadge.background": "#FFB900",
    "activityBarBadge.foreground": "#000000",
    "statusBar.background": "#0078D4",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.debuggingBackground": "#D83B01",
    "statusBar.debuggingForeground": "#FFFFFF",
    "statusBar.noFolderBackground": "#68217A",
    "sideBar.border": "#0078D4",
    "panel.border": "#0078D4",
    "tab.activeBorder": "#FFB900",
    "tab.activeBorderTop": "#FFB900"
  },

  // Python settings
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,

  // Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.rulers": [88, 120],

  // Files
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/*.egg-info": true,
    "**/.mypy_cache": true,
    "**/.ruff_cache": true
  },

  // Terminal
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.env.linux": {
    "PYTHONPATH": "${workspaceFolder}/src"
  },

  // Formatting
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true
  },

  // Git
  "git.autofetch": true,

  // Testing
  "python.testing.unittestEnabled": false,
  "python.testing.cwd": "${workspaceFolder}",

  // Copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "yaml": true
  },
  "chat.tools.terminal.autoApprove": {
    "/^cd /home/marco/hackfest-techconnect && \\.venv/bin/python -m pytest tests/ --cov=src/repo_inspector --cov-report=term-missing 2>&1 \\| tail -40$/": {
      "approve": true,
      "matchCommandLine": true
    }
  }
}
